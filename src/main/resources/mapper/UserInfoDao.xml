<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mateo.videotalk.dao.UserInfoDao">
    <!--为DAO接口方法提供sql语句配置-->
    <select id="findAvatarByUserID" resultType="String" parameterType="String">
        SELECT
        avatar
        FROM
        userinfo
        WHERE
        userID = #{userID}
    </select>
    <select id="findNickNameByUserID" resultType="String" parameterType="String">
        SELECT
          nickName
        FROM
          userinfo
        WHERE
          userID = #{userID}

    </select>
    <update id="updateAvatarByUserID" >
        UPDATE
        userinfo
        SET
        avatar = #{avatar}
        WHERE
        userID = #{userID}

    </update>
    <update id="updateNickNameByUserID" >
        UPDATE
        userinfo
        SET
        nickName = #{nickName}
        WHERE
        userID = #{userID}

    </update>
</mapper>