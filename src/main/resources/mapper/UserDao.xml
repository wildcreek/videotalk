<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mateo.videotalk.dao.UserDao">
    <!--为DAO接口方法提供sql语句配置-->
    <select id="getLatestUserIDByClientType" resultType="long" parameterType="String">
        SELECT
        userID
        FROM
        useraccount
        WHERE
        clientType = #{clientType}
        ORDER BY
        userID
        DESC
        LIMIT
        0,1
    </select>
    <select id="findUserByUserAccount" resultType="User">
        SELECT
          userID,userAccount,clientType,clientID,loginType,phoneNumber,province
        FROM
          useraccount
        WHERE
          userAccount = #{userAccount}

    </select>
    <select id="findUserByUserID" resultType="User">
        SELECT
        userID,userAccount,clientType,clientID,loginType,phoneNumber,province
        FROM
        useraccount
        WHERE
        userID = #{userID}

    </select>
    <insert id="insertUser" >

        INSERT INTO
        useraccount ( userID,userAccount,clientType,clientID,loginType,phoneNumber,province)
        VALUES
         (#{userID},#{userAccount},#{clientType},#{clientID},#{loginType},#{phoneNumber},#{province})

    </insert>
    <update id="updateClientID" >
        UPDATE
        useraccount
        SET
        clientID = #{clientID}
        WHERE
        userAccount = #{userAccount}

    </update>
    <update id="updatePhoneNumberAndProvince" >
        UPDATE
        useraccount
        SET
        phoneNumber = #{phoneNumber},province = #{province}
        WHERE
        userID = #{userID}

    </update>
</mapper>